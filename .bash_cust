# ~/.bash_cust: customizations for bash non-login shells

# set my bash history customizations
# keep more history
HISTSIZE=3000
HISTFILESIZE=9000

# enable color prompt
case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac
force_color_prompt=yes

# set my multiline prompt
if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01m\][\[\033[01;32m\]\u\[\033[01;37m\]@\[\033[01;34m\]\h\[\033[00m\]\[\033[01m\]] \[\033[01;32m\]\w\[\033[00m\]\n\[\033[01;32m\]$\[\033[00m\]> '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\n\$> '
fi
unset color_prompt force_color_prompt

# use my aliases
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# add dates to history and append commands to history immediately
export HISTTIMEFORMAT="%C%y%m%d%H%M%S: "
PROMPT_COMMAND="history -a"

# enable command completion for aws cli if present
if [ -f /usr/local/bin/aws_completer ]; then
  complete -C '/usr/local/bin/aws_completer' aws
fi

# set EDITOR to vim
export EDITOR='vim'
export VISUAL='vim'
